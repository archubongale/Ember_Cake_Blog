{{#if addNewCake}}
     <h1>New Cake</h1>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="flavor">Flavor</label>
      {{input value=flavor id="flavor"}}
    </div>

    <div class="form-group">
      <label for="frosting">Frosting</label>
      {{input value=frosting id="frosting"}}
    </div>

    <div class="form-group">
      <label for="image">Image Url</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'save1'}}>Save</button>
  </form>

</div>
 {{else}}
    <button {{action 'cakeFormShow'}}>New Cake</button>
{{/if}}

{{#if updateCakeForm}}
<h4>Update {{cake.name}} {{cake.flavor}}</h4>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=cake.name}}
    </div>

    <div class="form-group">
      <label for="flavor">Flavor</label>
      {{input value=flavor id="flavor" placeholder=cake.flavor}}
    </div>

    <div class="form-group">
      <label for="frosting">Frosting</label>
      {{input value=frosting id="frosting" placeholder=cake.frosting}}
    </div>

    <div class="form-group">
      <label for="image">Image Url</label>
      {{input value=image id="image" placeholder=cake.image}}
    </div>

    <button {{action 'update' cake}}>Save</button>
  </form>

</div>
{{else}}
<button {{action 'updateCakeForm'}}>Update</button>
{{/if}}
